<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_main"
    app:startDestination="@id/todoListFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="id.ac.ubaya.week8.view.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list" >
        <action
            android:id="@+id/actionCreateTodo"
            app:destination="@id/createTodoFragment" />
        <action
            android:id="@+id/actionEditTodo"
            app:destination="@id/editTodoFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
    <fragment
        android:id="@+id/createTodoFragment"
        android:name="id.ac.ubaya.week8.view.CreateTodoFragment"
        android:label="fragment_create_todo"
        tools:layout="@layout/fragment_create_todo" />
    <fragment
        android:id="@+id/editTodoFragment"
        android:name="id.ac.ubaya.week8.view.EditTodoFragment"
        android:label="fragment_edit_todo"
        tools:layout="@layout/fragment_edit_todo" >
        <argument
            android:name="uuid"
            app:argType="integer" />
    </fragment>
</navigation>